DATABASE_URL="postgresql://postgres:postgres@db:5432/coops?schema=public"
JWT_SECRET="replace_me_with_secure_secret_key_in_production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"
PORT=3000
NODE_ENV="development"

# Paystack Payment Gateway Configuration
# Get these from https://dashboard.paystack.com/settings/developer
PAYSTACK_PUBLIC_KEY="pk_live_your_public_key_here"
PAYSTACK_SECRET_KEY="sk_live_your_secret_key_here"

# Mailjet Email Configuration
# Get these from https://app.mailjet.com/account/settings
MAILJET_API_KEY="your_mailjet_api_key_here"
MAILJET_API_SECRET="your_mailjet_api_secret_here"
SENDER_EMAIL="noreply@bauchicooperative.ng"
SENDER_NAME="Bauchi Cooperative Registry"
ADMIN_EMAIL="admin@bauchicooperative.ng"

# Cloudinary File Storage Configuration
# Get these from https://cloudinary.com/console/settings/api-keys
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"
CLOUDINARY_UPLOAD_PRESET="your_upload_preset"

# Frontend Configuration
FRONTEND_URL="http://localhost:5173"